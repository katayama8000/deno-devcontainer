{
  "name": "Deno DevContainer",
  "dockerComposeFile": ["../compose.yaml", "compose.yaml"],
  "service": "deno_devcontainer",
  "workspaceFolder": "/workspace",
  "forwardPorts": [8080],
  "customizations": {
    "vscode": {
      "settings": {
        "[typescript]": { "editor.defaultFormatter": "denoland.vscode-deno" }
      },
      "extensions": [
        "denoland.vscode-deno",
        "GitHub.copilot"
      ]
    }
  }
}
